
config board 'board'
	option hardware 'DG301'
	option hasAdsl '1'
	option hasVdsl '1'
	option hasVoice '1'
	option hasDect '1'
	option VoicePorts '2'
	option hasWifi '1'
	option ethernetPorts '5'
	option ethernetPortNames 'LAN1 LAN2 LAN3 LAN4 WAN'
	option ethernetPortOrder 'eth4 eth3 eth1 eth2 eth0'
	option ethernetLanPorts 'eth1 eth2 eth3 eth4'
	option ethernetWanPort 'eth0'
	option adslWanPort 'atm0'
	option vdslWanPort 'ptm0'
	option lednames 'Ethernet Wireless Voice Broadband Status Internet DECT TV WPS'
	option buttonnames 'RESET DECT WPS INFO ECO'
	option wpsButtonGpio '22'
	option fxsRelayGpio '8'

config buttons 'buttons'
	option RESET '32 al resetbutton'
	option DECT '20 al dectbutton'
	option WPS '22 al wpsbutton'
	option INFO '37 al infobutton'
	option ECO '36 al ecobutton'

config leds 'leds'
	option Ethernet_green 'csr 0 ah'
	option Wireless_green 'csr 3 ah'
	option Voice_green 'gpio 9 al'
	option Broadband_green 'csr 6 ah'
	option Status_blue 'csr 7 ah'
	option Status_green 'gpio 39 al'
	option Status_red 'gpio 38 al'
	option Internet_green 'csr 5 ah'
	option Internet_red 'csr 4 ah'
	option DECT_red 'gpio 19 al'
	option DECT_green 'gpio 15 al'
	option TV_green 'gpio 35 al'
	option WPS_green 'csr 2 ah'
	option WPS_red 'csr 1 ah'

config led_map 'led_map'
	option dsl_ok 'Broadband_green=ON'
	option dsl_off 'Broadband_green=OFF'
